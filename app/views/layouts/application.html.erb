<!DOCTYPE html>
<html>
<head>
  <title>Instavention</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="wrapper">
    <header>
      <% if current_user %>
          <div class="greeting">
            <div class="greeting-content">
              <%= link_to "Hello, #{current_user.instagram_username}!", photos_path %> | <%= link_to "Log Out?", session_path, :method => :delete %>
            </div>
            <% unless current_user.instagram_profile.nil? %>
              <%= image_tag current_user.instagram_profile, :id => "profile-picture" %>
            <% end %>
          </div>
        <% end %>
      <div class="header-content">
        <h1><em><%= link_to "#instavention", photos_path %></em></h1>
      </div>
    </header>
    <div class="container">

      <%= yield %>

    </div>
  </div>
</body>
</html>
